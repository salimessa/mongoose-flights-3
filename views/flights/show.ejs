<%- include('../partials/header')%>

<section id="show-page">
  <div>Flight Number: <%= flight.flightNo %></div>
  <div>Departing From: <%= flight.airport %></div>
  <div>Departure Time: <%= `${flight.departs.toLocaleString()} PST` %></div>
  <tbody>
    <button><a = href='/flights/<%= flight._id %>/tickets/new'>Create New Ticket</a></button>
  </tbody>
  <div>Tickets:</div>
    <ul>
   
  </ul>
</section>
<br /><br />
<h2>Arrival Details</h2>
<form
  id="add-destination-form"
  method="POST"
  action="/flights/<%= flight._id %>/destinations">
  <label>Destination:</label>
  <select name="airport">
    <option value="BWI">BWI</option>
    <option value="IAD">IAD</option>
    <option value="SAN">SAN</option>
    <option value="LAX">LAX</option>
    <option value="DCA">DCA</option>
    <option value="ORD">ORD</option>
    <option value="MDW">MDW</option>
    <option value="DFW">DFW</option>
    <option value="DEN">DEN</option>
    <option value="AUS">AUS</option>
  </select>
  <label>Arrival:</label>
  <input type="datetime-local" name="arrival">
  <input type="submit" value="Add Destination" />
</form><br>

<% if (flight.destinations.length) { %>
    <% flight.destinations.forEach(f => {  %>
        <td>Arriving at <%= f.airport %> on <%= f.arrival.toLocaleDateString() %> at <%= f.arrival.toLocaleTimeString() %>  PST</td><br>
    <% }) %>
<% } else { %>
<% } %>


