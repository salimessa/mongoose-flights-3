<%- include('../partials/header') %>

<h2>Enter a New Flight</h2>
<form action="/flights" method="POST">
  <label>Airline:</label>
  <select name="airline" id="airlines">
    <option value="Select Airline"></option>
    <option value="South West">South West</option>   
    <option value="Delta">Delta</option>
    <option value="United">United</option>
    <option value="American">American</option>
    <option value="Jet Blue">Jet Blue</option>
  </select><br>
  <label>Airport:</label>
  <select name="airport" id="airports">
    <option value="Select Airport"></option>
    <option value="LAX">LAX</option>
    <option value="BWI">BWI</option>  
    <option value="IAD">IAD</option>  
    <option value="DCA">DCA</option>  
    <option value="ORD">ORD</option>  
    <option value="MDW">MDW</option>  
    <option value="SAN">SAN</option>
    <option value="AUS">AUS</option>
    <option value="DFW">DFW</option>
    <option value="DEN">DEN</option>
  </select><br>
  <label>FlightNo:
    <input type="number" name="flightNo">
  </label><br>
  <label>Departs:
    <input type="datetime-local" name="departs">
  </label><br>
  <button type="submit">Add Flight</button>
</form>

<%- include('../partials/footer') %>